{
  "schemaVersion": 1,
  "id": "inventorydelta",
  "version": "${mod_version}",

  "name": "InventoryDelta",
  "description": "InventoryDelta applies focused Deltas (e.g., CraftingSlotRefill Delta, InventoryStackMerge Delta) using a consistent naming approach for inventory transformations.",
  "authors": ["eikhren"],

  "environment": "*",

  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "inventorydelta.InventoryDeltaMod"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "inventorydelta.client.InventoryDeltaClientMod"
      }
    ],
    "modmenu": [
      {
        "adapter": "kotlin",
        "value": "inventorydelta.ui.InventoryDeltaModMenuIntegration"
      }
    ]
  },
  "mixins": [
    "inventorydelta.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.17.2",
    "fabric-api": "*",
    "fabric-language-kotlin": ">=1.13.7+kotlin.2.2.21",
    "minecraft": "1.21.10"
  }
}
